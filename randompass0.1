import random
import string


def random_pass_lvl_1(count_pass):
    password: str = string.ascii_letters
    password = ''.join(random.sample(password, count_pass))
    return password


def random_pass_lvl_2(count_pass):
    password: str = string.ascii_letters + string.digits
    password = ''.join(random.sample(password, count_pass))
    return password


def random_pass_lvl_3(count_pass):
    password: str = string.printable
    password = ''.join(random.sample(password, count_pass))
    return password


count_pass: str = input('How many chars you want?\n')
difficulty = int(input("Input difficulty lvl from 1 to 3\n"))
if str.isdigit(count_pass):
    count_pass = int(count_pass)
    if difficulty == 1:
        print(random_pass_lvl_1(count_pass))
    elif difficulty == 2:
        print(random_pass_lvl_2(count_pass))
    else:
        print(random_pass_lvl_3(count_pass))
else:
    print("Введите число, а не символ!!!")
